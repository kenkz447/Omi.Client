{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "shared/*": ["src/scripts/shared/*"]
        },
        "allowJs": true,
        "jsx": "react",
        "lib": [
            "dom",
            "es2017",
            "esnext.asynciterable"
        ],
        "moduleResolution": "node",
        "module": "es6",
        "noImplicitAny": false,
        "removeComments": true,
        "sourceMap": true,
        "target": "es2015",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules"
    ]
}